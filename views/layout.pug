doctype html
html
  head
    title Knowledge Base
    link(rel='stylesheet',href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
    link(rel='stylesheet',href='/css/style.css')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a.navbar-brand(href='#') Knowledgestack
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarsExampleDefault.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/')
              | Home 
              span.sr-only (current)
          li.nav-item
            a.nav-link(href='#') KnowledgeBase
          if user
            li.nav-item
              a.nav-link(href='/articles/add', tabindex='-1', aria-disabled='true') Add Articles
        ul.navbar-nav.navbar-right
          if user
            li
              a.nav-link(href="/users/logout") Logout
          else 
            li
              a.nav-link(href="/users/register") Register
            li
              a.nav-link(href="/users/login") Login
          

    .container.mt-4
      !=messages('message',locals)
      if errors
        each error, i in errors
          div(class="alert alert-danger") #{error.msg}
      block content
      br
      br
      hr
      footer
        p.text-center Copyright &copy; ace.inc 2020
    
    script(src="/bower_components/jquery/dist/jquery.min.js")
    script(src="/bower_components/bootstrap/dist/js/bootstrap.min.js")
    script(src="/js/main.js")
    
