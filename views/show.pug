extends layout
block content
  h1=article.title
  h5 written by #{author}
  .card
  .card-body.bg-light
    p=article.body
  hr
  if user
    if user.id == article.author
      a.btn.btn-secondary(href="/articles/edit/"+article._id) Edit Article
      a.btn.btn-danger.float-right.del-article(href="#",data-id=article._id) Delete Article
  
  
